# FastAPI 项目环境变量示例

# 应用设置
APP_NAME=FastAPI_Demo
SERVER_PORT=8000
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 60*24*8
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# 日志设置
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB

# CORS 设置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 数据库配置
MYSQL_SERVER=localhost
MYSQL_PORT=3306
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_DB=test
# DATABASE_URL=  # 可选，优先使用此项，格式如：mysql+pymysql://user:password@host:port/dbname
DATABASE_ECHO=True

# Redis 配置
REDIS_SERVER=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=  # 可选，优先使用此项，格式如：redis://:password@host:port/0

# MongoDB 配置
MONGO_SERVER=localhost
MONGO_PORT=27017
MONGO_USER=
MONGO_PASSWORD=
MONGO_DB=
# MONGO_URL=  # 可选，优先使用此项，格式如：mongodb://user:password@host:port/dbname

# Celery 配置
# CELERY_BROKER_URL=  # 可选，格式如：redis://host:port/1
# CELERY_RESULT_BACKEND=  # 可选，格式如：redis://host:port/2

# Sentry 配置
SENTRY_DSN=
